---
import { SITE, CATEGORIES } from '@/config';
const year = new Date().getFullYear();
---

<footer class="bg-gray-900 text-gray-400 mt-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Brand -->
      <div>
        <a href="/" class="text-white font-bold text-lg flex items-center gap-2 mb-3">
          <span class="text-indigo-400 text-xl">⬡</span>
          {SITE.name}
        </a>
        <p class="text-sm leading-relaxed">{SITE.description}</p>
        <div class="flex gap-3 mt-4">
          <a href="/rss.xml" class="text-gray-500 hover:text-indigo-400 transition-colors" title="RSS Feed">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19.01 7.38 20 6.18 20C4.98 20 4 19.01 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Categories -->
      <div>
        <h3 class="text-white font-semibold mb-3 text-sm uppercase tracking-wider">分類</h3>
        <ul class="space-y-2">
          {CATEGORIES.map((cat) => (
            <li>
              <a href={cat.href} class="text-sm hover:text-indigo-400 transition-colors">
                {cat.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Links -->
      <div>
        <h3 class="text-white font-semibold mb-3 text-sm uppercase tracking-wider">更多</h3>
        <ul class="space-y-2">
          <li><a href="/about" class="text-sm hover:text-indigo-400 transition-colors">關於我</a></li>
          <li><a href="/contact" class="text-sm hover:text-indigo-400 transition-colors">聯絡我</a></li>
          <li><a href="/rss.xml" class="text-sm hover:text-indigo-400 transition-colors">RSS 訂閱</a></li>
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-800 mt-10 pt-6 text-center text-xs text-gray-600">
      © {year} {SITE.name} · 保留所有權利
    </div>
  </div>
</footer>
