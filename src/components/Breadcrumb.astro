---
interface Crumb {
  label: string;
  href?: string;
}

interface Props {
  crumbs: Crumb[];
}

const { crumbs } = Astro.props;
---

<nav class="flex items-center gap-1.5 text-sm text-gray-500 mb-6" aria-label="麵包屑">
  <a href="/" class="hover:text-indigo-600 transition-colors">首頁</a>
  {crumbs.map((crumb, i) => (
    <>
      <span class="text-gray-300">/</span>
      {crumb.href && i < crumbs.length - 1 ? (
        <a href={crumb.href} class="hover:text-indigo-600 transition-colors">{crumb.label}</a>
      ) : (
        <span class="text-gray-900 font-medium">{crumb.label}</span>
      )}
    </>
  ))}
</nav>
